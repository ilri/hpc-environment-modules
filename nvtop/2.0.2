set appname     nvtop
set version     2.0.2
set prefix      /export/apps/${appname}/${version}
set exec_prefix ${prefix}/bin
set url         "https://github.com/Syllo/nvtop"
set msg         "NVIDIA GPUs htop like monitoring tool\nOfficial site: $url\n"

proc ModulesHelp{ } {
    puts stderr $msg
}

module-whatis   $msg

prepend-path    PATH    ${exec_prefix}

