set appname     flye
set version     2.9.4
set prefix      /export/apps/${appname}/${version}
set exec_prefix ${prefix}/bin

# flye includes minimap2 and samtools.
conflict        flye minimap2 samtools

# flye was installed with python/3.9 and needs its LD_LIBRARY_PATH
if { ![is-loaded python/3.9] } { 
    module load python/3.9
}

prepend-path    PATH        ${exec_prefix}
prepend-path    PYTHONPATH  ${prefix}/lib/python3.9/site-packages

