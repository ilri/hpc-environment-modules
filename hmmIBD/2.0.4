set appname     hmmIBD
set version     2.0.4
set prefix      /export/apps/${appname}/${version}
set exec_prefix ${prefix}/bin
set url         "https://github.com/glipsnort/hmmIBD"
set msg         "A hidden Markov model for detecting segments of shared ancestry (identity by descent).\nOfficial site: $url\n"

proc ModulesHelp{ } {
    puts stderr $msg
}

module-whatis $msg

conflict $appname

prepend-path    PATH        ${exec_prefix}

