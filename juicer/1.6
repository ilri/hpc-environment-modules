set appname     juicer
set version     1.6
set prefix      /export/apps/${appname}/${version}
set url         "https://github.com/aidenlab/juicer"
set msg         "A One-Click System for Analyzing Loop-Resolution Hi-C Experiments.\Official site: $url\n"

conflict        juicer

module-whatis   $msg

prepend-path    PATH            ${prefix}/bin

# juicer wants bwa, but they don't say which version so I will just load the
# latest one we have right now.
if { ![is-loaded bwa/0.7.17] } {
    module load bwa/0.7.17
}

