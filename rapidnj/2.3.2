set appname     rapidnj
set version     2.3.2
set prefix      /export/apps/${appname}/${version}
set exec_prefix ${prefix}/bin
set url         "https://github.com/johnlees/rapidnj"
set msg         "RapidNJ is an algorithmic engineered implementation of canonical neighbour-joining.\nOfficial site: $url\n"

proc ModulesHelp{ } {
    puts stderr $msg
}

module-whatis   $msg

conflict        $appname

prepend-path    PATH        ${exec_prefix}

