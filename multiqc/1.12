set appname     multiqc
set version     1.12
set prefix      /export/apps/${appname}/${version}
set exec_prefix ${prefix}/bin
set msg         "MultiQC is a reporting tool that parses summary statistics from results and log files generated by other bioinformatics tools.\nOfficial Site: http://multiqc.info/docs/"

# multiqc/1.12 uses a virtual environment created with python/3.9 so we should
# make sure no other python environment modules get loaded that might mess up
# the paths.
conflict $appname python

module-whatis   $msg

prepend-path    PATH       ${exec_prefix}
prepend-path    PYTHONPATH ${prefix}/lib/python3.9/site-packages

