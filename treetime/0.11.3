set appname treetime
set version 0.11.3
set prefix  /export/apps/${appname}/${version}
set url     "https://github.com/neherlab/treetime"
set msg     "Maximum likelihood inference of time stamped phylogenies and ancestral reconstruction.\nOfficial site: $url"

module-whatis   $msg

proc ModulesHelp { } {
    puts stderr $msg
}

conflict    $appname

# treetime was installed with python/3.9 and needs its LD_LIBRARY_PATH
if { ![is-loaded python/3.9] } { 
    module load python/3.9
}

prepend-path    PATH        ${prefix}/bin
prepend-path    PYTHONPATH  ${prefix}/lib/python3.9/site-packages

