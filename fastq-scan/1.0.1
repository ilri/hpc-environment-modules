set appname     fastq-scan
set version     1.0.1
set prefix      /export/apps/${appname}/${version}
set exec_prefix ${prefix}/bin
set url         "https://github.com/rpetit3/fastq-scan"
set msg         "Output FASTQ summary statistics in JSON format.\nOfficial site: $url\n"

proc ModulesHelp{ } {
    puts stderr $msg
}

module-whatis $msg

conflict $appname

prepend-path    PATH    ${exec_prefix}

