# for Tcl script use only
set     appname         groovy
set     version         2.4.9
set     prefix          /export/apps/${appname}/${version}
set     url             "http://groovy-lang.org/"
set     msg             "Apache Groovy is a powerful, optionally typed and dynamic language, with static-typing and static compilation capabilities, for the Java platform aimed at improving developer productivity thanks to a concise, familiar and easy to learn syntax.\n official site: $url\n"

conflict	$appname

module-whatis $msg

# groovy requires java/1.8
if { ![is-loaded java/1.8] } {
    module load java/1.8
}

prepend-path    PATH                ${prefix}/bin

