set appname     srprism
set version     3.1.2
set prefix      /export/apps/${appname}/${version}
set exec_prefix ${prefix}/bin
set url         "https://github.com/ncbi/SRPRISM"
set msg         "Single Read Paired Read Indel Substitution Minimizer.\nOfficial site: $url\n"

proc ModulesHelp{ } {
    puts stderr $msg
}

module-whatis   $msg

conflict        $appname

prepend-path    PATH        ${exec_prefix}

