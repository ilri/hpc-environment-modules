set appname         modeltest
set version         0.1.7
set prefix          /export/apps/${appname}/${version}
set url             "https://github.com/ddarriba/modeltest"
set msg             "ModelTest-NG is a tool for selecting the best-fit model of evolution for DNA and protein alignments.\nOfficial site: $url\n"

proc ModulesHelp{ } {
    puts stderr $msg
}

module-whatis $msg

prepend-path    PATH    ${prefix}/bin

