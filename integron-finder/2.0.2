set appname     integron-finder
set version     2.0.2
set prefix      /export/apps/${appname}/${version}
set url         "https://github.com/gem-pasteur/Integron_Finder"
set msg         "Bioinformatics tool to find integrons in bacterial genomes.\Official site: $url\n"

conflict        $appname

module-whatis   $msg

prepend-path    PATH            ${prefix}/bin
prepend-path    PYTHONPATH      ${prefix}/lib/python3.9/site-packages

# integron-finder was installed with python/3.9 and needs its LD_LIBRARY_PATH
if { ![is-loaded python/3.9] } {
    module load python/3.9
}

