# for Tcl script use only
set     appname         R
set     version         3.3.2
set     prefix          /export/apps/${appname}/${version}
set     exec_prefix     ${prefix}/bin
set     datarootdir     ${prefix}/share
set     url             "http://www.r-project.org/"
set     msg             "R is a free software environment for statistical computing and graphics.\nR official site: $url\n"

proc ModulesHelp{ } {
    puts stderr $msg
}

module-whatis $msg

conflict $appname

prepend-path    PATH        ${exec_prefix}
prepend-path    MANPATH     ${datarootdir}/man


