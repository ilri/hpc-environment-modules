set appname pod5
set version 0.3.2
set prefix  /export/apps/${appname}/${version}
set url     "https://github.com/nanoporetech/pod5-file-format"
set msg     "A high performance file format for nanopore reads.\nOfficial site: $url"

module-whatis   $msg

proc ModulesHelp { } {
    puts stderr $msg
}

conflict    $appname

# pod5 was installed with python/3.9 and needs its LD_LIBRARY_PATH
if { ![is-loaded python/3.9] } { 
    module load python/3.9
}

prepend-path    PATH        ${prefix}/bin
prepend-path    PYTHONPATH  ${prefix}/lib/python3.9/site-packages

