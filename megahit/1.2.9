set appname         megahit
set version         1.2.9
set prefix          /export/apps/${appname}/${version}
set exec_prefix     ${prefix}/bin
set msg             "Megahit is an ultra-fast single-node solution for large and complex metagenomics assembly via succinct de Bruijn graph.\nOfficial site: https://github.com/voutcn/megahit"

conflict            $appname

module-whatis       $msg

prepend-path        PATH    ${exec_prefix}

