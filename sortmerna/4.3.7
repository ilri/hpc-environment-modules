set appname     sortmerna
set version     4.3.7
set prefix      /export/apps/${appname}/${version}
set exec_prefix ${prefix}/bin
set url         "https://github.com/sortmerna/sortmerna"
set msg         "SortMeRNA is a local sequence alignment tool for filtering, mapping and clustering.\nOfficial site: $url\n"

proc ModulesHelp{ } {
    puts stderr $msg
}

module-whatis   $msg

conflict        $appname

prepend-path    PATH        ${exec_prefix}

