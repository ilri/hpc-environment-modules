set appname     skesa
# Tag doesn't always match version, see: https://github.com/ncbi/SKESA/blob/skesa.2.4.0_saute.1.3.0_2/skesa.cpp
set version     2.5.1
set prefix      /export/apps/${appname}/${version}
set exec_prefix ${prefix}/bin
set url         "https://github.com/ncbi/SKESA"
set msg         "SKESA assembler.\nOfficial site: $url\n"

proc ModulesHelp{ } {
    puts stderr $msg
}

module-whatis   $msg

conflict        $appname

prepend-path    PATH    ${exec_prefix}

