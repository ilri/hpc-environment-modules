set appname     gofasta
set version     1.2.3
set prefix      /export/apps/${appname}/${version}
set exec_prefix ${prefix}/bin
set url         "https://github.com/virus-evolution/gofasta"
set msg         "Aligning consensus genomes of any microbial pathogen.\nOfficial site: $url\n"

proc ModulesHelp{ } {
    puts stderr $msg
}

module-whatis   $msg

conflict        $appname

prepend-path    PATH    ${exec_prefix}

