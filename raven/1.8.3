set appname         raven
set version         1.8.3
set prefix          /export/apps/${appname}/${version}
set exec_prefix     ${prefix}/bin
set url             "https://github.com/lbcb-sci/raven"
set msg             "De novo genome assembler for long uncorrected reads.\nOfficial site: $url\n"

proc ModulesHelp{ } {
    puts stderr $msg
}

module-whatis $msg

conflict $appname

prepend-path    PATH    ${exec_prefix}

