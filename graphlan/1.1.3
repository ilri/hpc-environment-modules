set appname         graphlan
set version         1.1.3
set prefix          /export/apps/${appname}/${version}
set exec_prefix     ${prefix}/bin
set url             "https://github.com/biobakery/graphlan"
set msg             "GraPhlAn is a software tool for producing high-quality circular representations of taxonomic and phylogenetic trees.\nOfficial Site: $url\n"

module-whatis $msg

proc ModulesHelp { } {
    puts stderr "$msg"
}

conflict            $appname

prepend-path        PATH            ${exec_prefix}
prepend-path        PYTHONPATH      ${prefix}/lib/python2.7/site-packages
prepend-path        PYTHONPATH      ${prefix}

# graphlan uses a virtualenv based on python/2.7 so we should make sure that
# module is loaded.
if { ![is-loaded python/2.7] } { 
    module load python/2.7
}

