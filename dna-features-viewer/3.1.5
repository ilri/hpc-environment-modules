set appname dna-features-viewer
set version 3.1.5
set prefix  /export/apps/${appname}/${version}
set venv    ${prefix}
set url     "https://github.com/Edinburgh-Genome-Foundry/DnaFeaturesViewer"
set msg     "DNA Features Viewer is a Python library to visualize DNA features, e.g. from GenBank or GFF files, or Biopython SeqRecords.\nOfficial site: $url\n"

# this was installed with python/3.10 and needs its LD_LIBRARY_PATH
if { ![is-loaded python/3.10] } { 
    module load python/3.10
}

prepend-path    PATH        ${venv}/bin
prepend-path    PYTHONPATH  ${venv}/lib/python3.10/site-packages

