set appname         purge_haplotigs
set version         1.1.1
set prefix          /export/apps/${appname}/${version}
set url             "https://bitbucket.org/mroachawri/purge_haplotigs"
set msg             "Pipeline to help with curating heterozygous diploid genome assemblies.\nOfficial site: $url"

conflict        $appname

module-whatis       $msg

proc ModulesHelp { } {
    puts stderr $msg
}

# Dependencies from project: https://bitbucket.org/mroachawri/purge_haplotigs/src/master/#markdown-header-dependencies
# Dependencies from BioConda: https://bioconda.github.io/recipes/purge_haplotigs/README.html

# minimap2 >= 2.12
if { ![is-loaded minimap2/2.13] } {
    module load minimap2/2.13
}

# bedtools >= 2.25.0
if { ![is-loaded bedtools/2.29.0] } {
    module load bedtools/2.29.0
}

# R >= 3.4.1 (with ggplot >= 2.2.1)
if { ![is-loaded R/4.0] } {
    module load R/4.0
}

# samtools >= 1.7
if { ![is-loaded samtools/1.8] } {
    module load samtools/1.8
}

prepend-path    PATH        ${prefix}/bin

