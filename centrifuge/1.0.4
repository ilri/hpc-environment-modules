set appname         centrifuge
set version         1.0.4
set prefix          /export/apps/${appname}/${version}
set url             "https://ccb.jhu.edu/software/centrifuge/"
set msg             "Centrifuge is a very rapid and memory-efficient system for the classification of DNA sequences from microbial samples.\nOfficial site: $url"

module-whatis       $msg

proc ModulesHelp { } {
    puts stderr $msg
}

conflict            $appname

prepend-path        PATH    ${prefix}/bin

# centrifuge apparently expects dustmasker to be present, which is provided
# by NCBI blast.
if { ![is-loaded blast/2.12.0+] } {
    module load blast/2.12.0+
}

