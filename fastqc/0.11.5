# for Tcl script use only
set     appname         fastqc
set     version         0.11.5
set     prefix          /export/apps/${appname}/${version}
set     url             "http://www.bioinformatics.babraham.ac.uk/projects/fastqc/"
set     msg             "FastQC is a quality control tool for high throughput sequence data.\nFastQC official site: $url\n"

conflict	$appname

module-whatis $msg

# fastqc requires java/1.8
if { ![is-loaded java/1.8] }{
    module load java/1.8
}

prepend-path    PATH                ${prefix}

