set appname         freebayes
set version         1.3.4
set prefix          /export/apps/${appname}/${version}
set url             "https://github.com/ekg/freebayes"
set msg             "FreeBayes is a Bayesian genetic variant detector designed to find small polymorphisms.\nFreeBayes code repository: $url\n"

proc ModulesHelp{ } {
    puts stderr $msg
}

module-whatis   $msg

conflict        $appname

prepend-path    PATH    ${prefix}/bin

