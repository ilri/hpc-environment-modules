set appname     bmtagger
set version     0.3.102.4
set prefix      /export/apps/${appname}/${version}
set exec_prefix ${prefix}/bin
set url         "https://ftp.ncbi.nlm.nih.gov/pub/agarwala/bmtagger"
set msg         "Best Match Tagger for removing human reads from metagenomics.\nOfficial site: $url\n"

proc ModulesHelp{ } {
    puts stderr $msg
}

module-whatis   $msg

conflict        $appname

prepend-path    PATH        ${exec_prefix}

# bmtagger wants srprism
if { ![is-loaded srprism/3.1.2] } {
    module load srprism/3.1.2
}

# bmtagger wants blast, but doesn't say which version
if { ![is-loaded blast/2.12.0+] } {
    module load blast/2.12.0+
}

