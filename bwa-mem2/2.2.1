set appname         bwa-mem2
set version         2.2.1
set prefix          /export/apps/${appname}/${version}
set exec_prefix     ${prefix}/bin
set url             "https://github.com/bwa-mem2/bwa-mem2"
set msg             "The tool bwa-mem2 is the next version of the bwa-mem algorithm in bwa.\nOfficial Site: $url\n"

proc ModulesHelp { } {
    puts stderr "$msg"
}

module-whatis   "$msg"

conflict        ${appname}

prepend-path    PATH        ${exec_prefix}

